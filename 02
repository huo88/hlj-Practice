            /* 让文本水平垂直居中 */
            line-height: 40px;
            text-align: center;
        }
        .navlist a{
            /* 超链接改成黑色 */
            color:black;
            /* 我们把链接变成块显示 */
            display:block
        }
        
        .navlist{
            /* 列表宽设为800，然后居中 */
            width: 800px;
            margin:auto;
        }
        /* 设置鼠标悬停链接时，背景颜色变化 */
